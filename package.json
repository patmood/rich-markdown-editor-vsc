{
  "name": "rich-markdown-editor",
  "displayName": "Rich Markdown Editor",
  "version": "1.0.0",
  "description": "Edit markdown files in preview mode with a rich text editor",
  "main": "./out/extension.js",
  "engines": {
    "vscode": "^1.52.0"
  },
  "activationEvents": [
    "onCustomEditor:markdownCustom.richMarkdownEditor"
  ],
  "contributes": {
    "customEditors": [
      {
        "viewType": "markdownCustom.richMarkdownEditor",
        "displayName": "Rich Markdown Editor",
        "selector": [
          {
            "filenamePattern": "*.md"
          },
          {
            "filenamePattern": "*.markdown"
          }
        ]
      }
    ]
  },
  "keywords": [
    "rich",
    "markdown",
    "editor",
    "preview"
  ],
  "author": "",
  "license": "ISC",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run esbuild-extension && npm run esbuild-client",
    "esbuild-extension": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild-client": "esbuild ./src/client.ts --bundle --outfile=out/client.js --sourcemap --target=chrome58,firefox57,safari11,edge16",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "devDependencies": {
    "@types/node": "^17.0.21",
    "@types/vscode": "^1.65.0",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "esbuild": "^0.14.27",
    "eslint": "^8.11.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.6.2"
  }
}
